.btn-list {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  text-align: center;
}

button {
  background: none;
  background-color: #fcfcfa;
  border: 1px solid #ccc;
  border-radius: 50px;
  box-sizing: border-box;
  font-size: 16px;
  height: 42px;
  padding: 8px 12px;
  width: 90%;
}

.selected {
  background-color: #ff7;
}
